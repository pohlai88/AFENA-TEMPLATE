{
  "name": "afenda-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "afenda": "node tools/afenda-cli/dist/index.js",
    "afenda:dev": "tsx tools/afenda-cli/src/cli.ts",
    "afenda:discover": "node tools/afenda-cli/dist/discover.js",
    "postinstall": "node -e \"try{require('./tools/afenda-cli/dist/discover.js')}catch(e){process.exit(0)}\"",
    "build": "turbo run build --concurrency=75%",
    "build:analyze": "ANALYZE=true turbo run build",
    "dev": "turbo run dev --no-cache --continue",
    "dev:turbo": "turbo run dev --ui=tui",
    "lint": "turbo run lint --continue",
    "lint:ci": "turbo run lint:ci --continue --concurrency=100%",
    "lint:fix": "turbo run lint:fix --continue",
    "type-check": "turbo run type-check --continue --concurrency=100%",
    "type-check:strict": "turbo run type-check -- --strict",
    "type-check:refs": "tsc -b",
    "type-check:refs:clean": "tsc -b --clean && tsc -b",
    "type-check:all": "pnpm type-check && pnpm type-check:refs",
    "clean": "turbo run clean && rimraf node_modules/.cache",
    "clean:all": "pnpm clean && rimraf .turbo && rimraf **/node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,css,md,json,yaml,yml}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,css,md,json,yaml,yml}\" --cache",
    "engine:generate": "pnpm --filter afenda-ui engine:generate",
    "ui:add": "pnpm dlx shadcn@latest add -c apps/web",
    "ui:diff": "pnpm dlx shadcn@latest diff -c apps/web",
    "ui:update": "pnpm dlx shadcn@latest add -o -c apps/web",
    "readme:gen": "pnpm afenda readme gen",
    "readme:sync": "pnpm afenda readme sync",
    "readme:check": "pnpm afenda readme check",
    "project:gen": "pnpm afenda project gen",
    "project:gen:dry": "pnpm afenda project gen --dry-run",
    "project:check": "pnpm afenda project check",
    "proposal:gen": "pnpm afenda proposal gen",
    "proposal:gen:dry": "pnpm afenda proposal gen --dry-run",
    "proposal:check": "pnpm afenda proposal check",
    "meta:gen": "pnpm afenda meta gen",
    "meta:check": "pnpm afenda meta check",
    "meta:matrix": "pnpm afenda meta matrix",
    "adapter:build": "pnpm afenda meta emit-all",
    "bundle": "pnpm afenda bundle",
    "bundle:dry": "pnpm afenda bundle --dry-run",
    "housekeeping": "pnpm afenda housekeeping",
    "validate:deps": "tsx tools/scripts/validate-deps.ts",
    "validate:catalog": "tsx tools/scripts/validate-catalog.ts",
    "migrate:catalog": "tsx tools/scripts/migrate-to-catalog.ts",
    "housekeeping:fix": "pnpm afenda housekeeping --fix",
    "ci:check": "pnpm afenda housekeeping",
    "ci:housekeeping": "pnpm bundle",
    "canon:check-deps": "bash scripts/check-canon-deps.sh",
    "canon:check-imports": "depcruise packages/canon/src --config .dependency-cruiser.cjs",
    "canon:test": "pnpm --filter afenda-canon test",
    "canon:test:coverage": "pnpm --filter afenda-canon test:coverage",
    "ci:invariants": "pnpm afenda housekeeping",
    "ci:domain-gates": "node tools/ci-domain-gates.mjs",
    "ci:ais-benchmark": "node tools/ci-ais-benchmark-gate.mjs",
    "ci:finance-audit": "node tools/ci-finance-audit-gate.mjs",
    "ci:finance-audit:emit": "node tools/ci-finance-audit-gate.mjs --emit-only",
    "finance:evidence-pack": "node tools/finance-evidence-pack.mjs",
    "finance:docs": "node tools/finance-audit-docs.mjs",
    "test:domain": "pnpm --filter afenda-accounting --filter afenda-tax-engine --filter afenda-fx-management --filter afenda-receivables --filter afenda-payables --filter afenda-bank-reconciliation --filter afenda-consolidation --filter afenda-intercompany --filter afenda-treasury --filter afenda-fixed-assets --filter afenda-revenue-recognition --filter afenda-cost-accounting --filter afenda-budgeting --filter afenda-credit-management --filter afenda-expense-management --filter afenda-subscription-billing --filter afenda-project-accounting --filter afenda-lease-accounting test",
    "ci:adapter-gates": "node -e \"process.exit(0)\"",
    "audit": "pnpm audit --audit-level=moderate",
    "audit:prod": "pnpm audit --prod --audit-level=moderate",
    "audit:fix": "pnpm audit --fix",
    "sbom": "pnpm dlx @cyclonedx/cdxgen -r --no-install-deps -o sbom.json",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest --ui --coverage",
    "test:e2e": "playwright test --project=chromium",
    "test:e2e:all": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:codegen": "playwright codegen http://localhost:3000",
    "quality:pr-comment": "tsx tools/scripts/generate-pr-comment.ts",
    "quality:badges": "tsx tools/scripts/generate-badges.ts",
    "quality:badges:update": "tsx tools/scripts/generate-badges.ts --update",
    "quality:notify": "tsx tools/scripts/notify-team.ts",
    "quality:complexity": "tsx tools/scripts/analyze-complexity.ts",
    "quality:churn": "tsx tools/scripts/analyze-churn.ts",
    "quality:plugins": "tsx tools/scripts/run-plugins.ts",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install --with-deps",
    "search:bootstrap": "pnpm --filter web search:bootstrap",
    "quality:collect": "pnpm --filter quality-metrics collect",
    "quality:analyze": "pnpm --filter quality-metrics analyze",
    "quality:report": "pnpm --filter quality-metrics report",
    "quality:flakiness": "pnpm --filter quality-metrics flakiness",
    "quality:performance": "pnpm --filter quality-metrics performance",
    "quality:insights": "pnpm --filter quality-metrics insights",
    "quality:gates": "pnpm --filter quality-metrics gates",
    "quality:security": "pnpm --filter quality-metrics security",
    "quality:full": "pnpm quality:collect && pnpm quality:analyze && pnpm quality:flakiness && pnpm quality:performance && pnpm quality:insights",
    "changelog:generate": "tsx tools/scripts/generate-changelog.ts",
    "changelog:update": "tsx tools/scripts/generate-changelog.ts -- --update",
    "test:db-contracts": "vitest run -c business-domain/finance/vitest.integration.config.ts"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@djankies/vitest-mcp": "^0.5.1",
    "@faker-js/faker": "^10.3.0",
    "@playwright/test": "^1.58.2",
    "@types/node": "catalog:",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "@vitest/coverage-v8": "^4.0.18",
    "dotenv": "^16.6.1",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-plugin-import": "catalog:",
    "eslint-plugin-jsx-a11y": "catalog:",
    "eslint-plugin-react": "catalog:",
    "eslint-plugin-react-hooks": "catalog:",
    "eslint-plugin-security": "catalog:",
    "pino": "catalog:",
    "pino-abstract-transport": "catalog:",
    "pino-pretty": "catalog:",
    "prettier": "catalog:",
    "prettier-plugin-tailwindcss": "catalog:",
    "rimraf": "catalog:",
    "tsx": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:",
    "@types/pg": "^8.11.6",
    "pg": "^8.13.1",
    "testcontainers": "^10.16.0",
    "vitest": "catalog:"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.5.0"
  },
  "packageManager": "pnpm@9.15.9",
  "pnpm": {
    "overrides": {
      "es-abstract": "^1.23.3"
    }
  },
  "dependencies": {
    "@xyflow/react": "^12.10.0"
  }
}