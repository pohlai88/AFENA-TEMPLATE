{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "Quality Gates Configuration",
    "description": "Configuration for quality gates thresholds and rules",
    "type": "object",
    "properties": {
        "minCoverageLines": {
            "type": "number",
            "description": "Minimum line coverage percentage required",
            "minimum": 0,
            "maximum": 100,
            "default": 80
        },
        "minCoverageFunctions": {
            "type": "number",
            "description": "Minimum function coverage percentage required",
            "minimum": 0,
            "maximum": 100,
            "default": 80
        },
        "minCoverageStatements": {
            "type": "number",
            "description": "Minimum statement coverage percentage required",
            "minimum": 0,
            "maximum": 100,
            "default": 80
        },
        "minCoverageBranches": {
            "type": "number",
            "description": "Minimum branch coverage percentage required",
            "minimum": 0,
            "maximum": 100,
            "default": 75
        },
        "maxCoverageDropPct": {
            "type": "number",
            "description": "Maximum allowed coverage drop from baseline (percentage points)",
            "minimum": 0,
            "maximum": 100,
            "default": 2
        },
        "maxTypeErrors": {
            "type": "number",
            "description": "Maximum number of TypeScript errors allowed",
            "minimum": 0,
            "default": 0
        },
        "maxLintErrors": {
            "type": "number",
            "description": "Maximum number of ESLint errors allowed",
            "minimum": 0,
            "default": 0
        },
        "maxLintWarnings": {
            "type": "number",
            "description": "Maximum number of ESLint warnings allowed",
            "minimum": 0,
            "default": 10
        },
        "maxBuildTimeIncreasePct": {
            "type": "number",
            "description": "Maximum allowed build time increase from baseline (percentage)",
            "minimum": 0,
            "maximum": 1000,
            "default": 20
        }
    },
    "additionalProperties": false
}