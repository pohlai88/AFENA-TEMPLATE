{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Domain Library (source-first, no build)",
    "extends": "./base.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2022"
        ],
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "composite": false,
        "declaration": false,
        "declarationMap": false,
        "noEmit": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        "moduleDetection": "force",
        "incremental": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "**/*.test.*",
        "**/*.spec.*",
        "**/*.stories.*"
    ]
}