{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js Application",
  "extends": "./base.json",
  "compilerOptions": {
    // Next.js Specific
    "target": "ES2022",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    // Next.js Features
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    // Plugin
    "plugins": [
      {
        "name": "next"
      }
    ],
    // Next.js 16 Optimizations
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    // Build Output
    "declaration": false,
    "declarationMap": false,
    "composite": false,
    // Path Mapping (base - override in app tsconfig)
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*",
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "build",
    "*.config.*"
  ]
}