{
  "extends": "afena-typescript-config/react-library.json",
  "compilerOptions": {
    "incremental": false,
    "composite": false,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "include": ["src/**/*", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.test.*",
    "**/*.spec.*",
    "**/*.stories.*"
  ]
}
